rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // MATERIALS (Materiales)
    // ==========================================
    match /materials/{materialId} {
      allow read, write: if request.auth != null;
    }
    
    // ==========================================
    // MOVEMENTS (Movimientos)
    // ==========================================
    match /movements/{movementId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // ==========================================
    // USERS (Usuarios) - CRÍTICO PARA PERFIL
    // ==========================================
    match /users/{userId} {
      // Permitir leer el propio perfil o cualquier usuario (para gestión)
      allow read: if request.auth != null;
      // Permitir crear usuarios (para inicialización y registro)
      allow create: if request.auth != null;
      // Permitir actualizar solo el propio perfil o si es admin
      allow update: if request.auth != null && (
        request.auth.uid == userId || 
        request.resource.data.rol == 'gerente'
      );
      // No permitir eliminar usuarios (solo desactivar)
      allow delete: if false;
    }
    
    // ==========================================
    // ROLES (Roles)
    // ==========================================
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Solo durante inicialización
    }
    
    // ==========================================
    // PROVIDERS (Proveedores)
    // ==========================================
    match /providers/{providerId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ==========================================
    // PROJECTS (Proyectos)
    // ==========================================
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ==========================================
    // PROJECT MATERIALS (Materiales de Proyecto)
    // ==========================================
    match /project_materials/{materialId} {
      allow read, write: if request.auth != null;
    }
    
    // ==========================================
    // PROJECT ACTIVITIES (Actividades de Proyecto)
    // ==========================================
    match /project_activities/{activityId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ==========================================
    // TRANSFERS (Transferencias)
    // ==========================================
    match /transfers/{transferId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ==========================================
    // PURCHASES (Compras)
    // ==========================================
    match /purchases/{purchaseId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if false;
    }
    
    // ==========================================
    // AUDIT LOGS (Logs de Auditoría)
    // ==========================================
    match /audit_logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Solo lectura y creación
    }
    
    // ==========================================
    // USER ACTIVITIES (Actividades de Usuarios)
    // ==========================================
    match /user_activities/{activityId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }
    
    // ==========================================
    // REGLA POR DEFECTO: Denegar todo lo demás
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

